<!DOCTYPE html>
<html>
<head><%- include ('partials/template/head.ejs') -%></head>
<body id="<%= pageID %>">
<%- include ('partials/template/top-navigation.ejs') -%>
<div class="container top-margin-main-content" id="chat-section" style="display: none">
    <div class="row mt-2">
        <div class="col-8">
            <textarea class="form-control" id="chat-box" rows="3" placeholder="Start typing..."></textarea>
            <button type="submit" class="btn btn-dark float-end mt-2" onclick="sendMessage()">Send</button>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-8">
            <div class="card">
                <div id="private-messages" class="card-body scrollable-chat-section">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container top-margin-main-content" id="pre-chat-section">
    <div class="row">
        <div class="col-6"><span class="badge bg-info text-dark" id="online-users"></span></div>
    </div>
    <div class="row mt-2" id="message-row" style="display: none">
        <div class="col-6 alert alert-primary" id="info-message" role="alert" style="display: none">
        </div>
        <div class="col-6 alert alert-danger" id="error-message" role="alert" style="display: none">
        </div>
    </div>
    <div class="row mt-2" id="finding-match-row" style="display: none">
        <div class="col-6 alert alert-success" id="message-update" role="alert">
            Find the best match for you...
        </div>
    </div>
    <div class="row mt-2" id="form-row">
        <div class="col-6">
            <form name="chatForm" class="form-horizontal chat-form">
                <div class="mb-3">
                    <label for="username" class="form-label">Name</label>
                    <input type="text" class="form-control" id="username" aria-describedby="name">
                </div>
                <div class="mb-3">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="gender" value="m"
                               checked>
                        <label class="form-check-label">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="gender" value="f">
                        <label class="form-check-label">Female</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark float-end">Join</button>
            </form>
        </div>
    </div>
</div><!-- container -->
<%- include ('partials/template/commons.ejs') -%>
</body>
</html>
